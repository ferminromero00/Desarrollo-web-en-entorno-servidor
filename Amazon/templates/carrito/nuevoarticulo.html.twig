{% extends 'base.html.twig' %}

{% block title %}Carrito
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% include "carrito/index.html.twig" %}

		<h2>Cesta</h2>
		<table class="table table-stripped table-hover">
			{% for linea in pedido.LineaPedidos %}
				<tr>
					<td>{{ linea.Articulo.Nombre }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
