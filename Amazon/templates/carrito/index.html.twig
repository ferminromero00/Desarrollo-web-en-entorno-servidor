{% extends 'base.html.twig' %}

{% block title %}Carrito{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<aside class="mt-3">
    
</aside>
<div class="container mt-3">
    <h2>Artículos</h2>
    <table class="table table-striped table-hover">
        {% for a in articulos %}
            <tr>
                <td>{{ a.Nombre }}</td>
                <td>{{ a.Precio }} €</td>
                <!-- Llamamos a otro método que guaradará el ertículo en el pedido -->
                <td><a href="{{ path('app_carrito_addnuevoarticulo', {'id': a.id})}}">Añadir</a></td>
            </tr>
        {% else %}
            <tr><td>No hay artículos que mostrar</td></tr>
        {% endfor %}
    </table>
    <h2>Cesta</h2>
    <table class="table table-striped table-hover">
        {% for linea in pedido.LineaPedidos %}
            <tr>
                <td>{{ linea.Articulo.Nombre }}</td>
                <td>{{ linea.Articulo.Precio * linea.Cantidad }}</td>

            </tr>
        {% else %}
            <tr><td>No hay artículos que mostrar</td></tr>
        {% endfor %}
        <tr>
            <td>TOTAL</td>
            <td> {{ pedido.TotalPedido }} € </td>
        </tr>
    </table>
</div>
{% endblock %}
