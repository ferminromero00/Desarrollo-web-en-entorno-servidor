{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hola, {{ app.user.nombreApellidos }}</h1> <a href="{{ path('app_logout') }}">Cerrar sesi√≥n</a>

    <h4>Tabla de pedidos <span><a href="{{ path('app_nuevo_pedido') }}">Nuevo pedido</a></span></h4>
    <table class="table table-stripped table-hover">
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
        {% for pedido in app.user.Pedidos %}
        <tr>
            <td>{{ pedido.id }}</td>
            <td>{{ pedido.fecha|date('d/m/Y H:i:s') }}</td>
            <td><a href="{{ path('app_ver_pedido', { 'id': pedido.id }) }}">Ver pedido</a></td>
        </tr>
        {% endfor %}
    </table>

</div>

{% endblock %}
