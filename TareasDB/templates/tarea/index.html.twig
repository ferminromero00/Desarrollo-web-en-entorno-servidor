{% extends 'base.html.twig' %}

{% block title %}Tarea index
{% endblock %}

{% block body %}
	<h1>Tarea index</h1>

	{{ form(form) }}

	<br><br>
	
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titulo</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for tarea in tareas %}
				<tr>
					<td>{{ tarea.id }}</td>
					<td>{{ tarea.titulo }}</td>
					<td>
						<a href="{{ path('app_tarea_show', {'id': tarea.id}) }}">show</a>
						<a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<br><br>


	<div>
		<button>
			<a href="{{path('app_logout')}}" ;>Cerrar sesion</a>
		</button>
	</div>

{% endblock %}
