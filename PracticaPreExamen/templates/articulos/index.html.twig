{% extends 'base.html.twig' %}

{% block title %}Title
{% endblock %}

{% block body %}
	<h2>
		<a href={{ path('app_carrito', parameters = []) }}>Ver Carrito</a>
	</h2>
	<div>
		<table class='table table-striped'>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Precio</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in articulos %}
					<tr>
						<td>{{ item.nombre }}</td>
						<td>{{ item.precio }}
							$</td>
						<td>
							<a href={{ path('app_carrito_add', {id: item.id} ) }} class="btn btn-success">Agregar al carrito</a>
						</td>
					</tr>
				{% else %}
					<h2>No hay items</h2>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div>
		{{ form_start(form) }}
		{{ form_row(form.nombre) }}
		{{ form_row(form.precio) }}
		{{ form_end(form) }}
	</div>

	<a href={{ path('app_p_d_f', parameters = []) }}>Descargar algun pdf</a>
{% endblock %}
