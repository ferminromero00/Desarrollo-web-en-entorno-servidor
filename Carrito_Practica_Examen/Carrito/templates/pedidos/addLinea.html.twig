{% extends 'base.html.twig' %}

{% block title %}Hello PedidosController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hola
			{{ app.user.NombreApellidos }}! ✅</h1>

		<br>
		<table class="table table-striped table-hover">

			<caption>
				<th>#</th>
				<th>Fecha</th>
				<th>Usuario</th>
			</caption>
			<tbody>
				<tr>
					<td>
						{{pedido.id}}
					</td>
					<td>
						{{pedido.fecha | date ("d/m/y")}}
					</td>
					<td>
						{{pedido.Cliente.NombreApellidos}}
					</td>
				</tr>
			</tbody>

		</table>

		<h2>Añadir linea pedido</h2>
		{{ form(form) }}

			<table class="table table-striped table-hover">
				<caption>
					<th>#</th>
					<th>Articulo</th>
					<th>Cantidad</th>
					<th>Precio</th>
				</caption>
				{% for linea in pedido %}
					<tr>	
						<td> {{linea}} </td>
					</tr>
				{% endfor %}

			</table>

			<div>
				<button>
					<a href="{{path('app_logout')}}" ;>Salir</a>
				</button>
			</div>

		{% endblock %}
