{% extends 'base.html.twig' %}

{% block title %}Hello PedidosController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<h1>Hola
			{{ app.user.NombreApellidos }}</h1>

		<br><br>

		<table class="table table-striped table-hover">
			<tr>
				<td>#</td>
				<td>ID</td>
				<td>FECHA</td>
			</tr>
			{% for pedido in app.user.pedidos %}
				<tr>
					<td>{{ pedido.id }}</td>
					<td>{{ pedido.fecha|date('Y-m-d') }}</td>
					<td>
						<a href="{{ path('app_ver_pedidos', {'id': pedido.id}) }}">Ver pedido</a>
					</td>
				</tr>
			{% endfor %}
		</table>

		<a href="{{ path('app_nuevo_pedido') }}">
			<button>AÃ±adir Pedido</button>
		</a>
	</div>
{% endblock %}
