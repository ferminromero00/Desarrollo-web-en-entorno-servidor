{% extends 'base.html.twig' %}

{% block title %}Bienvenido
	{{ app.user.NombreApellidos }}!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h4>{{ titulo }}
			{{ app.user.NombreApellidos }}
		</h4>
	</div>

	<table class="table table-striped table-hover">
		<tr>
			<th>Alquileres</th>
		</tr>

		{% for alquiler in app.user.Alojamientos %}
			<tr>
				<td>{{alquiler.descripcion }}</td>
			</tr>
		{% endfor %}

	</table>


{% endblock %}
