{% extends 'base.html.twig' %}

{% block title %}Bienvenido
	{{ app.user.NombreApellidos }}!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h4>{{ titulo }}
			{{ app.user.NombreApellidos }}
		</h4>
	</div>

	<table class="table table-striped table-hover">
		<tr>
			<th>#</th>
			<th>Alojamientos</th>
			<td></td>
		</tr>

		{% for alojamiento in app.user.Alojamientos %}
			<tr>
				<td>{{alojamiento.id }}</td>
				<td>{{alojamiento.descripcion }}</td>
				<td>
					<a href=" {{ path('app_alquileres_del_alojamiento' , { 'id': alojamiento.id }) }} ">Alquileres del alojamiento</a>
				</td>
			</tr>
		{% endfor %}

	</table>


	{{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}
