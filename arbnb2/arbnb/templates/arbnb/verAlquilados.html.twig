{% extends 'base.html.twig' %}

{% block title %}Bienvenido
	{{ app.user.NombreApellidos }}!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h4>{{ titulo }}
			{{ app.user.NombreApellidos }}
		</h4>

		<table class="table table-striped table-hover mt-3">
			<tr>
				<th>#</th>
				<th>Alojamiento</th>
				<th>Persona Alquilada</th>
			</tr>
			{% for alojamiento in app.user.Alojamientos %}
				{% for alquiler in alojamiento.alquileres %}
					<tr>
						<td>{{ alojamiento.id }}</td>
						<td>{{ alojamiento.descripcion }}</td>
						<td>{{ alquiler.cliente.nombreApellidos }}</td>
					</tr>
				{% endfor %}
			{% endfor %}
		</table>


	</div>


{% endblock %}
