{% extends 'base.html.twig' %}

{% block title %}Bienvenido
	{{ app.user.NombreApellidos }}!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h4>{{ titulo }}
			{{ app.user.NombreApellidos }}
		</h4>

		<table class="table table-striped table-hover mt-3">
			<tr>
				<th>#</th>
				<th>Alojamiento</th>
				<th></th>
				<th></th>
			</tr>

			{% for alojamiento in app.user.Alojamientos %}
				<tr>
					<td>{{ alojamiento.id }}</td>
					<td>{{ alojamiento.descripcion }}</td>
					<td>
						<a href="{{ path('app_cambiar_nombre_alojamiento', { 'id': alojamiento.id })}}">Cambiar Nombre</a>
					</td>
					<td>
						<a href="{{ path('app_borrar', { 'id': alojamiento.id })}}">Borrar Instancia</a>
					</td>
				</tr>
			{% endfor %}
		</table>
		<button>
			<a href=" {{ path('app_mis_alojamientos_alquilados')}} ">Ver Alquilados</a>
		</button>
		<button>
			<a href=" {{ path('app_anadir_alojamiento')}}">AÃ±adir alojamiento</a>
		</button>


	</div>


{% endblock %}
