{% extends 'base.html.twig' %}

{% block title %}Escuela de Música
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">

		<h4>{{ titulo }}</h4>

		<table class="table table-striped table-hover">
			<tr>
				<th>#</th>
				<th>Nombre Alumno</th>
				<td>Ver matrícula del alumno/a</td>
			</tr>
			{% for e in alumnos %}
				{% if e.profesor == 0 %}
					<tr>
						<td>
							{{e.id}}
						</td>
						<td>
							{{e.NombreApellidos}}
						</td>
						<td>
							<a href="{{ path('app_ver_matricula_alumno' , { 'id': e.id }) }}">Ver</a>
						</td>
					</tr>
				{% endif %}
			{% endfor %}
		</tr>
	</table>
</div>{% endblock %}
