{% extends 'base.html.twig' %}

{% block title %}Escuela de Música
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">

		<h4>{{ titulo }}{{ app.user.username }}</h4>

		<table class="table table-striped table-hover">
			<tr>
				<th>#</th>
				<th>Nombre Instrumento</th>
				<th>Ver alumando Matriculado</th>
			</tr>
			{% for e in app.user.Instrumentos %}
				<tr>
					<td>
						{{e.id}}
					</td>
					<td>
						{{ e.nombre }}
					</td>
					<td>
						<a href=" {{ path('app_ver_matriculados' , { 'id': e.id }) }} ">Ver</a>
					</td>
				</tr>
			{% endfor %}


		</td>

	</tr>
</table>
<button>
	<a href=" {{ path('app_añadir_instrumento') }} ">Añadir Instrumento</a>
</button>


</div>{% endblock %}
