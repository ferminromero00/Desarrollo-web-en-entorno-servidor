{% extends 'base.html.twig' %}

{% block title %}[Mis clases]
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="container">
		<table class="table table-stripped table-hover">
			<thead>
				<tr>
					<th>Alumnado Matriculado
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for alumno in alumnado %}
					<tr>
						<td>
							{{ alumno.NombreApellidos }}
						</td>
						<td>
							<a href=" {{ path('app_ver_matricula_alumnos', {id:alumno.id}) }} ">Ver Matricula del Alumno</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
