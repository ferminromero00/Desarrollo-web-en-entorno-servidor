{% extends 'base.html.twig' %}

{% block title %}[Alumnado]
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="container">
		<table class="table table-stripped table-hover">
			<thead>
				<tr>
					<th>Profesor</th>
					<th>Instrumento</th>
				</tr>
			</thead>
			{% for matricula in alumno.Matricula %}
				<tr>
					<td>
						{{ matricula.instrumento.profesor.NombreApellidos }}
					</td>
					<td>
						{{ matricula.instrumento.nombre }}
					</td>
				</tr>
			{% endfor %}
		</div>
	{% endblock %}
