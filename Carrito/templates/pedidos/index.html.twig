{% extends 'base.html.twig' %}

{% block title %}Hello PedidosController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hola
			{{ app.user.NombreApellidos }}! âœ…</h1>

		<br>

		<h1>{{ titulo }}</h1>

		<table class="table table-striped table-hover">

			<tr>
				<th>#</th>
				<th>Fecha</th>
				<th>Acciones</th>
			</tr>

			{% for pedido in app.user.Pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fecha|date('d-m-y H:i:s ') }}</td>
                <td>
                    <button>
                        <a href="{{ path('app_ver_pedido', {'id': pedido.id}) }}">Ver pedido</a>
                    </button>
                </td>
            </tr>
        {% endfor %}
		</table>

		<br>

		<div>
			<button>
				<a href="{{path('app_logout')}}" ;>Salir</a>
			</button>
		</div>


	</div>
{% endblock %}
