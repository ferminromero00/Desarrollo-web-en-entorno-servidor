{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <a href="{{path('app_nuevo_proveedor')}}" class="btn btn-primary">CREAR UN NUEVO PROVEEDOR, TARJETA O INGRESO</a>

    <br><br>
    <table class="table table-striped table-hover">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
        {% for e in proveedores %}
            <tr>
               <td> {{e.nombre}} </td>
               <td>
                    <button><a href="{{path('app_modificar_proveedor', {'ProveedorId': e.id})}}">MODIFICAR</a></button>
               </td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}
