{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">

    <a href="{{path('app_nueva_compra')}}" class="btn btn-primary">REGISTRAR UNA NUEVA COMPRA</a>

    <br><br>

    <table class="table table-striped table-hover">
        <tr>
            <th>Fecha</th>
            <th>Cantidad</th>
            <th>Proveedor</th>
            <th>Factura</th>
            <th>Acciones</th>
        </tr>
        {% for e in compras %}
            <tr>
               <td> {{e.fecha|date("d/m/Y")}} </td>
               <td> {{e.cantidad}} € </td>
               <td> {{e.proveedor.nombre}}</td>
               <td> 
                    {% if e.factura == 1  %}
                        A
                    {% else %}
                        B
                    {% endif %}
                </td>

               <td>
                    <button><a href="{{path('app_modificar_compra', {'CompraId': e.id})}}">MODIFICAR</a></button>
               </td>
            </tr>
        {% endfor %}
        <tr>
            <th>TOTAL</th>
            <th> {{total}} € </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </table>
</div>

{% endblock %}
