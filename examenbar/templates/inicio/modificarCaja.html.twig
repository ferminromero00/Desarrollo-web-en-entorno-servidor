{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h4>[MODIFICAR LA CAJA DEL DÍA]</h4>

    <form name="caja" method="post">
        <label class="mt-3">FECHA</label>
        {{dump(caja[0].fecha|date("d/m/Y"))}}
        <input type="date" id="caja_fecha" name="caja[fecha]" required="required" class="form-control" value="{{caja[0].fecha|date("d/m/Y")}}" />
        <label class="mt-3">CANTIDAD</label>
        <div class="input-group">
            <input type="text" id="caja_cantidad" name="caja[cantidad]" required="required" class="form-control" inputmode="decimal" 
            value="{{caja[0].cantidad}}" />

            <span class="input-group-text">€</span>
        </div>
        <button class="btn btn-primary mt-3">GUARDAR</button>
        <a href="{{ path('app_caja') }}" class="btn btn-primary mt-3">VOLVER</a>
    <input type="hidden" id="caja__token" name="caja[_token]" data-controller="csrf-protection" value="csrf-token" /></form>
    </div>

{% endblock %}
